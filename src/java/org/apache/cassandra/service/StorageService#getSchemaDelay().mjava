    private static int getSchemaDelay()
    {
        String newdelay = System.getProperty("cassandra.schema_delay_ms");
        if (newdelay != null)
        {
            logger.info("Overriding SCHEMA_DELAY to {}ms", newdelay);
            return Integer.parseInt(newdelay);
        }
        else
        {
            return 30 * 1000;
        }
    }

