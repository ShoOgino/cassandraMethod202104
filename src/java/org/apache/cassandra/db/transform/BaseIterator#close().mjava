    public final void close()
    {
        // If close has already been called we want to ignore other calls
        if (closed)
            return;

        closed = true;

        Throwable fail = runOnClose(length);
        if (next instanceof AutoCloseable)
        {
            try
            {
                ((AutoCloseable) next).close();
            }
            catch (Throwable t)
            {
                fail = merge(fail, t);
            }
        }
        try
        {
            input.close();
        }
        catch (Throwable t)
        {
            fail = merge(fail, t);
        }
        maybeFail(fail);
    }

